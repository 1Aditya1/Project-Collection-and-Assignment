<% provide(:title, 'Upload Legacy Project Details') %>
<h3>Please enter the details of the legacy project</h3>
<br>
<script type="text/javascript">

jQuery(function(){
  $('form .toggle').hide();

$(".my-select").change(function()
{
  $('form .toggle').hide();
  // get value from dropdown
  var divClass = $('.my-select').val();

    if(divClass== "github_link" || divClass == "heroku_link")
         $('.' + "link").show();

    else
        $('.' + "file").show()
});
});
</script>



<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <%= form_for(@document) do |f| %>
           
             <%= fields_for @project do |fa| %>
                <%=fa.label :title %>
                <%=fa.text_field :title, :disabled => true%>
            <% end %>
            <%= f.label :Author %><br>
            <%= f.text_field :author, class: "form_control" %>


        <%# Use this logic for iteration documnets later %>
        <%#= f.label "Document Type"%>
        <%#= f.select :doc_type, @options ,  {:prompt=>"Select document type"}, {:class => "my-select"}%>

        <%#= f.label :Link, class:"toggle link" %><br>
        <%#= f.text_field :link, class: "form_control toggle link" %>

        <%#= f.label :File, class:"toggle file" %><br>
        <%#= f.file_field :filein , class:"toggle file" %>

        <%=f.label "Github Link" %>
        <%=f.text_field :link1 %>
    
        <%=f.label "Heroku Link" %>
        <%=f.text_field :link2 %>
        <%= f.label "Final Report" %>
        <%= f.file_field :filein1 %>

        <%= f.label "Final Poster"%>
        <%= f.file_field :filein2 %>
   

        <%= hidden_field_tag :curr_project, @project.id %>

            <div class="col-md-6 col-md-offset-3">
                <%= f.submit :Submit, class: "btn btn-primary" %>
            </div>

        <% end %>

    </div>
</div>

