<% provide(:title, 'Project Details') %>
<h1>Project Details</h1>

<% if current_user.admin? %>
<h2><%= link_to "Edit", edit_project_path(@project) %>
  | <%= link_to "Delete", @project, method: :delete,
                                data: { confirm: "You sure?" } %>
</h2>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
<table class="table">
  <tr>
  	<th>Title</th>
  	<td><%= @project.title %></td>
  </tr>
    <tr>
  	<th>Semester</th>
  	<td>None</td>
  </tr>

  <tr>
  
  	<th>Organization</th>
  	<td><%= @project.organization %></td>
  </tr>
  <tr>
  	<th>Contact</th>
  	<td><%= @project.contact %></td>
  </tr>
  <tr>
  	<th>Description</th>
  	<td><%= @project.description %></td>
  </tr>
  <tr>
  	<th>On Campus</th>
  	<td><%= @project.oncampus? ? 'Yes':'No' %></td>
  </tr>

  <tr>
  	<th>Is Legacy</th>
  	<td><%= @project.islegacy? ? 'Yes':'No' %> <%#= link_to "(Legacy Details)",project_legacy_path(@project)%> </td>
  </tr>

	<tr>
  	<th>Team</th>
  	<td><%=link_to @team.name, team_path(@team) %></td>
  </tr>
	<tr>
  	<th>Members</th>
  	<td>
    <ol>

    <% if current_user.admin? %>
    <% @members.zip(@member_ids).each do |value,id| %>
    <li><%= link_to value, user_path(id) %></li>
    <% end %>

    <% else %>
    <% @members.zip(@member_ids).each do |value,id| %>
    <li><%= value %></li>
    <% end %>

    <% end %>

    	<tr>
  <th>Project Documentation</th>
  	<td><%=link_to "View", project_documentation_path(@project) %></td>
  </tr>

    </ol>
    
    </td>
  </tr>
  <% if current_user.admin? %>
  <tr>
    <th>Approved</th>
    <td><%= @project.approved? ? 'Yes':'No' %></td>
  </tr>
  <% end %>
</table>

</div>
</div>