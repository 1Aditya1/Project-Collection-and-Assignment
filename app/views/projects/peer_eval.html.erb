<% provide(:title, 'Peer Evaluation') %>
<h1>Peer Evaluation</h1>


<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <%= form_for(:pe) do |f| %>
            <% @members.each do |member| %>
                <div class="h3"> <%= f.label "Member : " + member.name %> </div>
                <p/><p/><p/><p/><p/><p/>

                <%= "* \Q1. How about the perform?" %>
                <%= select_tag(:city_id, options_for_select([['Work less', -1], ['Finish what was assigned', 0], ['Work more', 1]])) %>

                <%= "* \Q2. Comments" %>
                <%= f.text_area :comment, class: "form_control", rows: 4 %>
                <hr>
            <% end %>
            <div class="col-md-6 col-md-offset-3">
                <%= f.submit "Submit", class: "btn btn-primary" %>
            </div>

        <% end %>
    </div>
</div>
