<% provide(:title, 'Peer Evaluation Result') %>
<h1>Peer Evaluation Result of Team <%= @team.name %> </h1>
<br/>
<br/>
<br/>
<h2> Scores </h2>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <table class="table">
            <thead>
                <tr>
                    <th> </th>
                    <% @all_pe.each do |pe| %>
                        <th><%= pe[0] %></th>
                    <% end %>
                </tr>
            </thead>
            <tbody>
                <% @all_pe.each do |pe| %>
                    <tr>
                        <td> <%= link_to "#{pe[0]}", peer_evaluation_path(:check_one_user_peer_evaluation => "#{pe[4]}") %> </td>
                        <% counter = 1 %>
                        <% @team.members.each do |m| %>
                            <td> <%= pe[counter] %> </td>
                            <% counter+= 1 %>
                        <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>

    </div>
</div>
<hr>
<h2> Comments </h2>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <table class="table">
            <thead>
                <tr>
                    <th> </th>
                    <% @all_pe.each do |pe| %>
                        <th><%= pe[0] %></th>
                    <% end %>
                </tr>
            </thead>
            <tbody>
                <% @all_pe.each do |pe| %>
                    <tr>
                        <td> <%= link_to "#{pe[0]}", peer_evaluation_path(:check_one_user_peer_evaluation => "#{pe[4]}") %> </td>
                        <% counter = @team.members.size() + 1 %>
                        <% @team.members.each do |m| %>
                            <td> <%= pe[counter] %> </td>
                            <% counter+= 1 %>
                        <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>

    </div>
</div>
